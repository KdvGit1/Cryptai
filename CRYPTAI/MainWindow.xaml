<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:scottplot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
    x:Class="CRYPTAI.MainWindow"
    mc:Ignorable="d"
    x:Name="MainWin"
    WindowStyle="None"
    WindowState="Maximized"
    ResizeMode="NoResize"
    Background="#144748"
    Topmost="True"
    d:DesignHeight="471.752" d:DesignWidth="710.087" Title="CRYPTAI" Loaded="MainWin_Loaded" Icon="/IMGS/CRYPTAI.png">

    <Window.Resources>
        <Style x:Key="CustomDataGridStyle" TargetType="{x:Type DataGrid}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#305555"/>
            <Setter Property="VerticalGridLinesBrush" Value="Transparent"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#103030"/>
            <Setter Property="Foreground" Value="#00FFFF"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5,10,5"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="BorderBrush" Value="#305555"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E0FFFF"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#204545"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#446A6A"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/IMGS/CRYPTAII.png" Stretch="Uniform"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="Solpanel" Width="2*"/>
            <ColumnDefinition x:Name="Sagpanel" Width="8*"/>
        </Grid.ColumnDefinitions>

        <Border x:Name="Border2" Grid.Row="0" Grid.RowSpan="2" Grid.Column="0"
            CornerRadius="10,10,10,10"
            Margin="5,5,0,5"
            Background="{StaticResource PanelGradientBrush}" MouseLeave="Border_MouseLeave" MouseEnter="Border_MouseEnter">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="80"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10,10,10,20" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Image Width="100" Height="100" Source="/IMGS/CRYPTAII.png" Margin="0,0,8,0"/>
                    <TextBlock Text="CRYPTAI" Foreground="{StaticResource PrimaryDarkBrush}" FontSize="36" FontFamily="Titillium Web SemiBold" FontWeight="Bold" VerticalAlignment="Center" TextDecorations="Underline"/>
                </StackPanel>

                <Border x:Name="Home" BorderThickness="1" Height="65" VerticalAlignment="Top" CornerRadius="2,2,2,2" MouseEnter="Border_MouseEnter1" MouseLeave="Border_MouseLeave1" HorizontalAlignment="Center" Grid.Row="2" MouseLeftButtonDown="Border_MouseLeftButtonDown" BorderBrush="{StaticResource PrimaryDarkBrush}" Width="{Binding ActualWidth, ElementName=Border2, Mode=OneWay}" Margin="10,0,10,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="{Binding ActualWidth, ElementName=Home, Mode=OneWay}">
                        <Image x:Name="HomeImage" Source="/IMGS/homepage.png" Margin="28,0,0,0" Width="60" Height="60"/>
                        <TextBlock x:Name="HomePAGEText" Text="HOME" Foreground="{StaticResource PrimaryDarkBrush}" FontSize="24" Height="60" FontFamily="Titillium Web Black" TextAlignment="Center" Padding="5,10,0,0"/>
                    </StackPanel>
                </Border>

                <Border x:Name="Favori" BorderThickness="1" Height="65" VerticalAlignment="Top" CornerRadius="2,2,2,2" MouseEnter="Border_MouseEnter1" MouseLeave="Border_MouseLeave1" HorizontalAlignment="Center" Grid.Row="3" MouseLeftButtonDown="Border_MouseLeftButtonDown" BorderBrush="{StaticResource PrimaryDarkBrush}" Width="{Binding ActualWidth, ElementName=Border2, Mode=OneWay}" Margin="10,0,10,0">
                    <StackPanel x:Name="MyStarImage" Orientation="Horizontal" HorizontalAlignment="Left" Width="{Binding ActualWidth, ElementName=Favori, Mode=OneWay}">
                        <Image x:Name="StarImage" Source="/IMGS/Star.png" Margin="28,0,0,0" Width="60" Height="60"/>
                        <TextBlock x:Name="FavoriteText" Text="Favori Coinler" Foreground="{StaticResource PrimaryDarkBrush}" FontSize="24" Height="60" FontFamily="Titillium Web SemiBold" TextAlignment="Center" Padding="5,10,0,0" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <Border Grid.Row="0" Grid.Column="1" Height="90" Margin="5,5,5,0" CornerRadius="10,10,10,10" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="{Binding Color, Source={StaticResource SecondaryDarkBrush}}" Offset="0"/>
                    <GradientStop Color="{Binding Color, Source={StaticResource ControlDarkBrush}}" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid Margin="10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0,0,0,5">
                        <TextBlock Text="EMA Config:" Foreground="{StaticResource TextWhiteBrush}" Margin="0,0,5,0" VerticalAlignment="Center" FontFamily="Titillium Web SemiBold"/>
                        <TextBox Text="EMA20,SMA50,EMA7" Width="150" Margin="0,0,15,0" Style="{StaticResource DarkTextBoxStyle}"/>
                        <TextBlock Text="Exchange:" Foreground="{StaticResource TextWhiteBrush}" Margin="0,0,5,0" VerticalAlignment="Center"/>
                        <ComboBox Width="100" SelectedIndex="0" Margin="0,0,15,0" Style="{StaticResource DarkComboBoxStyle}">
                            <ComboBoxItem Content="BINANCE"/>
                        </ComboBox>
                        <TextBlock Text="Timeframe:" Foreground="{StaticResource TextWhiteBrush}" Margin="0,0,5,0" VerticalAlignment="Center"/>
                        <ComboBox Width="80" SelectedIndex="0" Margin="0,0,15,0" Style="{StaticResource DarkComboBoxStyle}">
                            <ComboBoxItem Content="15M"/>
                        </ComboBox>
                        <TextBlock Text="Market Sentiment:" Foreground="{StaticResource TextWhiteBrush}" Margin="0,0,5,0" VerticalAlignment="Center"/>
                        <TextBlock Text="N/A" Foreground="{StaticResource TextWhiteBrush}" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                        <TextBlock Text="Search Symbol:" Foreground="{StaticResource TextWhiteBrush}" Margin="0,0,5,0" VerticalAlignment="Center" FontFamily="Titillium Web SemiBold"/>
                        <TextBox x:Name="SearchText" Width="150" Style="{StaticResource DarkTextBoxStyle}" />

                        <Button x:Name="SearchButton" Width="80" Style="{StaticResource SearchButtonStyle}" Margin="5,0,0,0" VerticalAlignment="Center" HorizontalContentAlignment="Center" Height="22" Click="SearchButton_Click">
                            <TextBlock Text="ARA" Foreground="{StaticResource TextWhiteBrush}" FontWeight="Bold" VerticalAlignment="Center" FontFamily="Titillium Web SemiBold"/>
                        </Button>

                        <Button x:Name="RefreshListButton" Click="RefreshListButton_Click" Width="100" Style="{StaticResource SearchButtonStyle}" Margin="5,0,0,0" VerticalAlignment="Center" HorizontalContentAlignment="Center" Height="22">
                            <TextBlock Text="LİSTE YENİLE ↻" Foreground="{StaticResource TextWhiteBrush}" FontWeight="Bold" VerticalAlignment="Center" FontFamily="Titillium Web SemiBold" FontSize="11"/>
                        </Button>

                        <Button x:Name="StartScanButton" Click="StartScanButton_Click" Width="140" Style="{StaticResource SearchButtonStyle}" Margin="5,0,0,0" VerticalAlignment="Center" HorizontalContentAlignment="Stretch" Height="22">
                            <Grid>
                                <ProgressBar x:Name="ScanProgressBar" 
                     Visibility="Collapsed" 
                     IsIndeterminate="True" 
                     Height="22" 
                     VerticalAlignment="Stretch" 
                     HorizontalAlignment="Stretch" 
                     Opacity="0.5" 
                     Foreground="#00FFFF" 
                     BorderThickness="0" 
                     Background="Transparent"/>

                                <TextBlock x:Name="ScanButtonText" 
                   Text="TARAMAYI BAŞLAT 🚀" 
                   Foreground="{StaticResource TextWhiteBrush}" 
                   FontWeight="Bold" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center" 
                   FontFamily="Titillium Web SemiBold" 
                   FontSize="11"/>
                            </Grid>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <Button x:Name="MinButton" Click="BtnMinimize_Click" Style="{StaticResource ZoomButtonStyle}" Width="40" Height="40" VerticalAlignment="Top" HorizontalAlignment="Right">
                        <Image Source="/IMGS/minButton.png" Stretch="Uniform" Width="35"/>
                    </Button>
                    <Button x:Name="CloseButton" Click="ExitFullScreen_Click" Style="{StaticResource ZoomButtonStyle}" Width="40" Height="40" VerticalAlignment="Top" Margin="0,0,3,0" HorizontalAlignment="Right">
                        <Image Source="/IMGS/closeButton.png" Stretch="Uniform" Width="35"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Grid.Column="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="340"/>
            </Grid.ColumnDefinitions>

            <Border x:Name="Border" Grid.Column="0" CornerRadius="10" Margin="2" Background="{StaticResource PanelGradientBrush}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="2"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="TextBlock" Text="STRENGTH SORTED (Hybrid Risk Score)" Foreground="{StaticResource TextWhiteBrush}" FontWeight="Bold" FontSize="16" FontFamily="Titillium Web SemiBold" HorizontalAlignment="Left"/>
                    <Rectangle Grid.Row="1" Height="2" Fill="{StaticResource TextWhiteBrush}" HorizontalAlignment="Left" Width="{Binding ActualWidth, ElementName=TextBlock}"/>
                    <DataGrid Grid.Row="2" x:Name="MyDataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Style="{StaticResource CustomDataGridStyle}" Margin="5,10,5,5" AutoGenerateColumns="True" MouseDoubleClick="MyDataGrid_MouseDoubleClick" />
                </Grid>
            </Border>

            <Border Grid.Column="1" CornerRadius="10" Margin="2" Background="{StaticResource PanelGradientBrush}">
                <Grid x:Name="RightPanelGrid" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="2"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="AI SORTED / MUM VERİSİ" Foreground="{StaticResource TextWhiteBrush}" FontWeight="Bold" FontSize="16" FontFamily="Titillium Web SemiBold" HorizontalAlignment="Left" Margin="0,0,0,5" x:Name="TextBlockAI"/>
                    <Rectangle Grid.Row="1" Height="2" Fill="{StaticResource TextWhiteBrush}" HorizontalAlignment="Left" Width="{Binding ActualWidth, ElementName=TextBlockAI}"/>

                    <Grid x:Name="ContentArea" Grid.Row="2">
                        <Grid x:Name="ListAndTerminalContainer" Visibility="Visible">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <DataGrid Grid.Row="0" x:Name="MyDataGrid1" d:ItemsSource="{d:SampleData ItemCount=5}" Style="{StaticResource CustomDataGridStyle}" Margin="5,8,5,5" AutoGenerateColumns="True"/>
                            <Border Grid.Row="2" Background="#101010" CornerRadius="5" BorderBrush="#303030" BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="> LIVE SYSTEM LOGS" Foreground="#00FFFF" FontSize="10" Margin="5,2,0,2" FontFamily="Consolas" FontWeight="Bold"/>
                                    <TextBox x:Name="TerminalOutput" Grid.Row="1" Background="Transparent" Foreground="#00FFFF" FontFamily="Consolas" FontSize="11" BorderThickness="0" IsReadOnly="True" TextWrapping="Wrap" Padding="5"/>
                                </Grid>
                            </Border>
                        </Grid>

                        <Grid x:Name="ChartContainer" Visibility="Collapsed">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Background="#161A25" Padding="10,5">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="ChartHeaderInfo" 
                       Text="O: 0.00 H: 0.00 L: 0.00 C: 0.00" 
                       Foreground="#B2B5BE" 
                       FontFamily="Consolas" 
                       FontSize="12" 
                       VerticalAlignment="Center"/>

                                    <TextBlock x:Name="ChartIndicatorsInfo" 
                       Text=" MA(7): 0.00 MA(25): 0.00 MA(99): 0.00" 
                       Foreground="#B2B5BE" 
                       FontFamily="Consolas" 
                       FontSize="12" 
                       VerticalAlignment="Center" 
                       Margin="20,0,0,0"/>
                                </StackPanel>
                            </Border>

                            <scottplot:WpfPlot x:Name="WpfPlotPrice" Grid.Row="1" Margin="0,0,0,-1"/>

                            <scottplot:WpfPlot x:Name="WpfPlotVolume" Grid.Row="2" Margin="0"/>

                            <Button Grid.Row="3" x:Name="BackToListViewButton" Content="← Listeye Geri Dön" Margin="10,5" Click="BackToListViewButton_Click" Style="{StaticResource SearchButtonStyle}"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <Grid x:Name="LoadingGrid" Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="2" Background="#CC000000" Visibility="Visible" d:IsHidden="True">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="AI MOTORU BAŞLATILIYOR..." Foreground="{StaticResource TextWhiteBrush}" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" FontFamily="Titillium Web SemiBold"/>
                <TextBlock Text="Veri akışı bekleniyor (Bu işlem 5-10 sn sürebilir)" Foreground="LightGray" FontSize="14" Margin="0,10,0,0" HorizontalAlignment="Center" FontFamily="Titillium Web"/>
                <ProgressBar IsIndeterminate="True" Width="200" Height="5" Margin="0,15,0,0" BorderThickness="0" Background="#33FFFFFF" Foreground="#00FFFF"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>